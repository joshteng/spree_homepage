<% content_for :page_title do %>
  <%= Spree.t("homepage.homepage_sliders") %> <i class="icon-arrow-right"></i> <%= Spree.t("homepage.editing_slider_image") %>
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t(:back_to_sliders_images_list), spree.admin_sliders_url, :icon => 'icon-arrow-left' %></li>
<% end %>

<%= render "spree/shared/error_messages", :target => @slider %>

<%= form_for [:admin, @slider], :html => { :multipart => true } do |f| %>
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
<% end %>